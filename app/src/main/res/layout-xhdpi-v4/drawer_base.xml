<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:id="@+id/drawer_layout" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:background="@color/common_mndmdm_background" android:layout_width="match_parent" android:layout_height="match_parent">
        <androidx.appcompat.widget.Toolbar android:gravity="center_horizontal" android:layout_gravity="center_horizontal" android:id="@+id/toolbar" android:background="@color/common_mndmdm_background_unlock_red" android:padding="10dp" android:layout_width="match_parent" android:layout_height="wrap_content">
            <ImageButton android:layout_gravity="left" android:id="@+id/ivMenu" android:background="@drawable/img_common_drawer_menu" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="15dp"/>
            <ImageView android:layout_gravity="center" android:id="@+id/ivUserState" android:background="@drawable/img_common_mnsa_logo" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <ImageButton android:layout_gravity="right" android:id="@+id/btnAlert" android:background="@drawable/img_common_btn_alert" android:padding="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="10dp"/>
            <ImageButton android:layout_gravity="right" android:id="@+id/btnDeleteApp" android:background="@drawable/img_common_drawer_delete" android:padding="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="10dp"/>
        </androidx.appcompat.widget.Toolbar>
        <FrameLayout android:id="@+id/content_frame" android:layout_width="match_parent" android:layout_height="match_parent"/>
        <androidx.viewpager.widget.ViewPager android:id="@+id/pager" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_below="@+id/toolbar"/>
    </LinearLayout>
    <RelativeLayout android:layout_gravity="start" android:orientation="vertical" android:id="@+id/left_drawer" android:background="@color/common_mndmdm_background" android:clickable="true" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginRight="-64dp">
        <RelativeLayout android:id="@+id/rlListTitle" android:background="@color/common_mndmdm_background" android:layout_width="match_parent" android:layout_height="150dp">
            <ImageView android:id="@+id/ivLogo" android:background="@drawable/img_common_mmsa_logo_menu" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true"/>
            <TextView android:textStyle="bold" android:textColor="#ffffff" android:gravity="center" android:id="@+id/tvCallCenter2" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:text="@string/common_call_center" android:layout_below="@+id/ivLogo" android:fontFamily="sans-serif"/>
            <TextView android:gravity="center" android:layout_gravity="center" android:id="@+id/tvCopyRightnVersion" android:visibility="invisible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/ivLogo"/>
            <Button android:id="@+id/btnClose" android:background="@android:drawable/ic_menu_close_clear_cancel" android:layout_width="40dp" android:layout_height="40dp" android:layout_marginTop="10dp" android:layout_marginBottom="5dp" android:layout_alignParentRight="true" android:layout_marginStart="5dp" android:layout_marginEnd="10dp"/>
        </RelativeLayout>
        <RelativeLayout android:id="@+id/rlBottom" android:background="@color/common_mndmdm_background" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_below="@+id/rlListTitle">
            <ListView android:layout_gravity="start" android:id="@+id/lvDrawerMenu" android:background="@color/common_mndmdm_background" android:layout_width="match_parent" android:layout_height="wrap_content" android:divider="@color/common_mndmdm_list_border" android:dividerHeight="1dp" android:choiceMode="singleChoice" android:layout_above="@+id/btnDelete" android:layout_alignParentTop="true"/>
            <ImageView android:id="@+id/ivCopyRight" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="10dp" android:layout_alignParentBottom="true" android:layout_centerHorizontal="true"/>
            <ImageView android:background="@color/msticker_color_drawer_divider" android:layout_width="match_parent" android:layout_height="1dp" android:layout_above="@+id/ivCopyRight"/>
            <TextView android:textSize="30sp" android:textStyle="bold" android:textColor="#333333" android:id="@+id/tvCallCenter" android:paddingLeft="20dp" android:paddingRight="20dp" android:visibility="invisible" android:clickable="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="10dp" android:text="02-2262-0000" android:layout_above="@+id/ivCopyRight" android:layout_centerHorizontal="true"/>
            <ImageView android:id="@+id/ivCallCenterImage" android:background="@drawable/img_common_call_center_title" android:visibility="invisible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_above="@+id/tvCallCenter" android:layout_alignLeft="@+id/tvCallCenter"/>
            <Button android:textSize="20sp" android:id="@+id/btnDelete" android:background="@drawable/style_common_btn_red" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginRight="10dp" android:layout_marginBottom="10dp" android:text="@string/common___delete_mmsa" android:layout_alignParentBottom="true"/>
        </RelativeLayout>
    </RelativeLayout>
</androidx.drawerlayout.widget.DrawerLayout>
