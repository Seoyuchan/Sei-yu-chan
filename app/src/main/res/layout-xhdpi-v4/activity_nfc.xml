<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:id="@+id/rlDialog" android:background="#4d000000" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/body" android:background="#ffffff" android:visibility="invisible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginRight="20dp" android:layout_centerInParent="true">
        <RelativeLayout android:gravity="center_vertical" android:id="@+id/header" android:background="#2a7ef1" android:padding="10dp" android:layout_width="match_parent" android:layout_height="wrap_content">
            <ImageView android:id="@+id/ivIcon" android:background="@drawable/img_common_dialog_icon_gk" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="10dp" android:layout_centerVertical="true"/>
            <TextView android:textSize="20sp" android:textStyle="bold" android:textColor="#ffffff" android:id="@+id/tvTitle" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/mndmdm_checkout_nfc_secu" android:layout_toRightOf="@+id/ivIcon" android:layout_centerVertical="true"/>
        </RelativeLayout>
        <TextView android:textSize="18sp" android:textColor="@color/msticker_color_dialog_text_description" android:id="@+id/tvDescription" android:padding="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/mndmdm_checkout_secu_nfc_desc" android:layout_below="@+id/header"/>
        <ProgressBar android:id="@+id/pbProgress" android:layout_width="match_parent" android:layout_height="100dp" android:layout_marginBottom="20dp" android:indeterminateDrawable="@drawable/animation_progress_popup" android:layout_below="@+id/tvDescription"/>
        <Button android:textSize="16sp" android:textStyle="bold" android:textColor="#2a7ef1" android:id="@+id/btnClose" android:background="#00000000" android:paddingTop="3dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:layout_marginBottom="10dp" android:text="@string/common___cancel" android:layout_below="@+id/pbProgress" android:layout_centerHorizontal="true"/>
    </RelativeLayout>
</RelativeLayout>
